<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="jndiDataSet" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass"><value>cz.larpovadatabaze.test.RegisterJNDIFactory</value></property>
        <property name="targetMethod"><value>propagateJNDIObject</value></property>
        <property name="arguments">
            <list>
                <value>java:comp/env/jdbc/csld</value>
                <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
                      destroy-method="close">
                    <property name="driverClass" value="org.postgresql.Driver" />
                    <property name="jdbcUrl" value="jdbc:postgresql://localhost/csld" />
                    <property name="user" value="csld" />
                    <property name="password" value="csld" />
                </bean>
            </list>
        </property>
    </bean>

    <bean id="fileUploadSet" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass"><value>cz.larpovadatabaze.test.RegisterJNDIFactory</value></property>
        <property name="targetMethod"><value>propagateJNDIObject</value></property>
        <property name="arguments">
            <list>
                <value>java:comp/env/csld/dataDir</value>
                <value>C:\User\jbalhar\</value>
            </list>
        </property>
    </bean>
</beans>
